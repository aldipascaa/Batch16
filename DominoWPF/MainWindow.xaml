<Window x:Class="DominoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominoWPF"
        mc:Ignorable="d"
        Title="Domino" Height="560" Width="900" MinWidth="700" MinHeight="420">
    <DockPanel Margin="8" LastChildFill="True">

        <!-- Top toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="btnStartReset" Content="Start Game" Width="120" Click="BtnStartReset_Click" Margin="0,0,8,0"/>
            <TextBlock x:Name="lblCurrentPlayer" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <TextBlock x:Name="tbStatus" Margin="12,0,0,0" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Bottom: player's hand (horizontal) -->
        <GroupBox Header="Your Hand" DockPanel.Dock="Bottom" Height="140" Margin="0,8,0,0">
            <Grid>
                <ListBox x:Name="lbHand"
                         Margin="6"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         SelectionMode="Single">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <!-- Domino tile template for hand (slightly larger) -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="4" Margin="6" Background="#fffef0"
                                    Width="80" Height="48" MinWidth="60" MinHeight="40">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Viewbox Grid.Column="0" Stretch="Uniform">
                                        <TextBlock Text="{Binding LeftValue}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Viewbox>

                                    <Border Grid.Column="1" Background="#222" Width="2" Margin="4,6"/>

                                    <Viewbox Grid.Column="2" Stretch="Uniform">
                                        <TextBlock Text="{Binding RightValue}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Viewbox>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="8">
                    <Button x:Name="btnPlay" Content="Play Selected" Width="120" Margin="0,0,8,0" Click="BtnPlay_Click" IsEnabled="False"/>
                    <Button x:Name="btnDraw" Content="Draw" Width="80" Click="BtnDraw_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Center: board area (show pieces left -> right) -->
        <GroupBox Header="Board" Margin="0,0,0,8" >
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="6" Background="DarkOliveGreen">
                    <!-- Center the stack of tiles -->
                    <ItemsControl x:Name="icBoard" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- Domino tile template for board (compact) -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="4" Margin="6" Background="#f7f7f7"
                                        Width="64" Height="36" MinWidth="56" MinHeight="32">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="2" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Viewbox Grid.Column="0" Stretch="Uniform">
                                            <TextBlock Text="{Binding LeftValue}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Viewbox>

                                        <Border Grid.Column="1" Background="#333" Width="2" Margin="3,4"/>

                                        <Viewbox Grid.Column="2" Stretch="Uniform">
                                            <TextBlock Text="{Binding RightValue}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Viewbox>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock x:Name="tbEnds" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8" />
            </Grid>
        </GroupBox>
    </DockPanel>
</Window>